<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
							   "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>

		<form-bean name="annunciForm"
				   type="it.geek.annunci.form.GestioneAnnunciForm" />

	</form-beans>

	<action-mappings>
	
		<action path="/annunciForm"
				name="annunciForm"
				scope="request"
				type="it.geek.controller.GestioneAnnunciAction"
				parameter="method">
				
			<forward name="failure" path="/error.jsp"/>

		</action>
		
	</action-mappings>

	<message-resources parameter="ApplicationResources"></message-resources>

</struts-config>